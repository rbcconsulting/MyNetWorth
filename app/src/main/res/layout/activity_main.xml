<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rbcconsulting.mobile.mynetworth.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">


            <TextView
                android:id="@+id/tv_lbl_Asset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/main_asset_label"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/tv_lbl_AssetAmount"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:text="0.00"
                android:textAlignment="viewEnd"
                android:gravity="end"
                android:textSize="24sp"
                app:layout_constraintLeft_toRightOf="@+id/tv_lbl_Asset"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_lbl_Asset"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_lbl_Asset" />


            <TextView
                android:id="@+id/tv_lbl_Debt"
                android:layout_width="68dp"
                android:layout_height="33dp"
                android:text="@string/main_debt_label"
                android:textSize="24sp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_lbl_DebtAmount"
                app:layout_constraintTop_toTopOf="@+id/tv_lbl_DebtAmount" />

            <TextView
                android:id="@+id/tv_lbl_DebtAmount"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:text="0.00"
                android:textAlignment="viewEnd"
                android:gravity="end"
                android:textSize="24sp"
                app:layout_constraintLeft_toRightOf="@+id/tv_lbl_Debt"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_conversion_absoluteHeight="28dp"
                tools:layout_conversion_absoluteWidth="203dp"
                tools:layout_conversion_absoluteX="156dp"
                tools:layout_conversion_absoluteY="36dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_lbl_AssetAmount"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_width="0dp" />


            <TextView
                android:id="@+id/tv_lbl_NetWorth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/main_networth_label"
                android:textSize="24sp"
                tools:layout_conversion_absoluteX="0dp"
                tools:layout_conversion_absoluteY="65dp"
                tools:layout_conversion_absoluteWidth="156dp"
                tools:layout_conversion_absoluteHeight="28dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_lbl_Debt"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/tv_lbl_NetWorthAmount"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:text="0.00"
                android:textAlignment="viewEnd"
                android:gravity="end"
                android:textSize="24sp"
                app:layout_constraintLeft_toRightOf="@+id/tv_lbl_NetWorth"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_conversion_absoluteHeight="28dp"
                tools:layout_conversion_absoluteWidth="203dp"
                tools:layout_conversion_absoluteX="156dp"
                tools:layout_conversion_absoluteY="65dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_lbl_NetWorth"
                app:layout_constraintTop_toTopOf="@+id/tv_lbl_NetWorth" />

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline"
                app:layout_constraintGuide_begin="20dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="89dp"
                tools:layout_editor_absoluteX="20dp" />


        </android.support.constraint.ConstraintLayout>

    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>
